<Window x:Class="DiscordToExcel_RaidHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscordToExcel_RaidHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!---'Grid' ist ein Layout-Panel, das andere Steuerelemente enthält. Es gibt verschiedene Arten von Layout-Panels, die in WPF verwendet werden können.-->
    <Grid>
        <Button Click="Button_Click" HorizontalAlignment="left" Margin="30,30,0,0" Height="60" Width="170" VerticalAlignment="Top">Load current Raids</Button>
        <TextBlock x:Name="Raids" HorizontalAlignment="Right" Margin="0,30,15,0" Width="400" VerticalAlignment="Top">
            TEST
        </TextBlock>
    </Grid>
</Window>
